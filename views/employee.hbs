<div class="row">
  <div class="col-md-12">

    <h2>{{employee.firstName}}
      {{employee.lastName}}
      - student:
      {{employee.employeeNum}}
    </h2>
    <hr />

    <form method="post" action="/employee/update">

      <input type="hidden" name="employeeNum" value="{{ employee.employeeNum}} " />

      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstName">First Name:</label>
              <input
                class="form-control"
                id="firstName"
                name="firstName"
                type="text"
                value="{{employee.firstName}} "
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="lastName">Last Name:</label>
              <input
                class="form-control"
                id="last_name"
                name="lastName"
                type="text"
                value="{{employee.lastName}} "
              />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="email">Email:</label>
              <input
                class="form-control"
                id="email"
                name="email"
                type="text"
                value="{{employee.email}} "
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="SSN"> Social Security Number:</label>
              <input
                class="form-control"
                id="SSN"
                name="SSN"
                type="tel"
                value="{{employee.SSN}} "
              />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressStreet">Address (Street):</label>
              <input
                class="form-control"
                id="addressStreet"
                name="addressStreet"
                type="text"
                value="{{employee.addressStreet}} "
              />
            </div>
          </div>
          <div class="col-md-3">
            <label for="addressCity">Address (City):</label>
            <input
              class="form-control"
              id="addressCity"
              name="addressCity"
              type="text"
              value="{{employee.addressCity}} "
            />
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressState">Address (State):</label>
              <input
                class="form-control"
                id="addressState"
                name="addressState"
                type="text"
                value="{{employee.addressState}} "
              />
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressPostal">Address (Zip Code):</label>
              <input
                class="form-control"
                id="addressPostal"
                name="addressPostal"
                type="text"
                value="{{employee.addressPostal}} "
              />
            </div>
          </div>
        </div>

      </fieldset>

      <fieldset>
        <div class="row">
        <div class="col-md-3">
            <div class="form-group">
              <label for="isManager">Manager:</label>
              <input
                class="form-control"
                type="checkbox"
                id="isManager"
                name="isManager"
                checked=""
              />
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="employeeManagerNum"> Employee's Manager Number:</label>
              <input
                class="form-control"
                id="employeeManagerNum"
                name="employeeManagerNum"
                type="text"
                value="{{employee.employeeManagerNum}} "
              />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
              <label>Status:</label><br />
              <label class="checkbox-inline">
                {{#equal employee.status "Full Time" }}
                  <input
                  type="radio"
                  id="statusFT"
                  name="status"
                  checked=""
                  value="Full Time"
                />
                Full Time
              </label>
                {{/equal}}
                
              <label class="checkbox-inline">
                {{#equal employee.status "Part Time" }}
                  <input
                  type="radio"
                  id="statusPT"
                  name="status"
                  value="Part Time"
                />
                Part Time
              </label>
                {{/equal}}
                
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for=" Department"> Department</label>
              <select class="form-control" name="department" id="Department">
                {{#equal employee.department "1"}}
                  <option value="1" selected="">Creative Services</option>
                {{/equal}}
                {{#equal employee.department "2"}}
                  <option value="2" selected="">Product Development</option>
                {{/equal}}
                {{#equal data.department "3"}}
                  <option value="3" selected="">Marketing</option>
                {{/equal}}
                {{#equal employee.department "4"}}
                  <option value="4" selected="">Strategic Planning</option>
                {{/equal}}
                {{#equal employee.department "5"}}
                  <option value="5" selected="">Accounting</option>
                {{/equal}}
                {{#equal employee.department "6"}}
                  <option value="6" selected="">Human Resources</option>
                {{/equal}}
                {{#equal employee.department "7"}}
                  <option value="7" selected="">Quality Analysis</option>
                {{/equal}}
              </select>
            </div>
          </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="hireDate"> Hire Date</label>
              <input
                class="form-control"
                id="hireDate"
                name="hireDate"
                type="text"
                value="{{employee.hireDate}} "
                readonly=""
              />
            </div>
          </div>
        </div>
      </fieldset>

      <hr />
      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Update employee"
      /><br /><br /><br />

    </form>
  </div>
</div>